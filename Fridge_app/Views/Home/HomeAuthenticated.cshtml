@model Fridge_app.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<div class="container min-vh-100 d-flex flex-column">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Witaj, @User.Identity.Name!</h2>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">Moja lodówka</h4>
                    <a asp-controller="Fridge" asp-action="Index" class="stretched-link text-white text-decoration-none">Zobacz</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">Lista produktów</h4>
                    <a asp-controller="Product" asp-action="Index" class="stretched-link text-white text-decoration-none">Zarządzaj</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">Użytkownicy</h4>
                    <a asp-controller="User" asp-action="Index" class="stretched-link text-white text-decoration-none">Zarządzaj</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger h-100">
                <div class="card-body text-center">
                    <h4 class="card-title">Statystyki</h4>
                    <a asp-controller="Admin" asp-action="Stats" class="stretched-link text-white text-decoration-none">Przegląd</a>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_AddProductModals")
</div>
