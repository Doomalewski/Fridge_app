@model Product
@{
    ViewData["Title"] = "Create Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductCategory" class="control-label"></label>
        <select asp-for="ProductCategory"
                class="form-control"
                asp-items="Html.GetEnumSelectList<ProductCategory>()">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="ProductCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Unit" class="control-label"></label>
        <select asp-for="Unit" class="form-control" asp-items="new SelectList(ViewBag.Units)">
            <option value="">Select Unit</option>
        </select>
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <!-- Add other fields similarly -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>