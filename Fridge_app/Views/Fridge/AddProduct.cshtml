@model IEnumerable<Product>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 clickable-product-card"
                     data-product-id="@product.Id"
                     data-product-name="@product.Name"
                     onclick="selectProduct(@product.Id, '@product.Name')">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-start">
                            <h6 class="card-title mb-0 flex-grow-1 pe-2">@product.Name</h6>
                            <span class="badge bg-secondary">@product.ProductCategory</span>
                        </div>
                        <div class="mt-2">
                            <div class="text-muted small">
                                <div>@product.Kcal kcal</div>
                                <div>@product.Unit</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">Brak produktów spełniających kryteria</div>
}

<style>
    .clickable-product-card {
        cursor: pointer;
        transition: all 0.2s;
        min-width: 180px;
    }

        .clickable-product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

    .card-title {
        font-size: 1rem;
        line-height: 1.3;
        font-weight: 500;
        word-break: keep-all;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-text small {
        font-size: 0.8rem;
    }
</style>