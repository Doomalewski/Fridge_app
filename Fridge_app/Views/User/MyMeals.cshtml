@model IEnumerable<Fridge_app.Models.Meal>

@{
    ViewData["Title"] = "Moje przepisy";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book"></i> Moje zapisane przepisy</h2>
        <form asp-action="GenerateMeal" method="post">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-magic"></i> Wygeneruj nowy przepis
            </button>
        </form>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="row">
            @foreach (var meal in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">@meal.Recipe.Name</h5>
                            <small class="text-muted">@meal.Recipe.CreatedAt.ToShortDateString()</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@meal.Description</p>
                            
                            <div class="mb-2">
                                <span class="badge bg-info">@meal.Category</span>
                                <span class="badge bg-warning text-dark">@meal.Recipe.Difficulty</span>
                            </div>

                            @if (meal.Tags?.Any() == true)
                            {
                                <div class="mb-2">
                                    @foreach (var tag in meal.Tags)
                                    {
                                        <span class="badge bg-secondary">@tag.Name</span>
                                    }
                                </div>
                            }

                            <hr />

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">
                                        <i class="bi bi-basket"></i> @meal.Recipe.Ingridients?.Count sk³adników
                                    </small>
                                </div>
                                <div>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> 
                                        @(meal.Recipe.Steps?.Sum(s => s.StepTime ?? 0)) min
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="MealDetails" asp-route-id="@meal.Id" class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> Zobacz szczegó³y
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fa-3x mb-3"></i>
            <h4>Nie masz jeszcze zapisanych przepisów</h4>
            <p>Wygeneruj swój pierwszy przepis na podstawie produktów z lodówki!</p>
            <form asp-action="GenerateMeal" method="post" class="mt-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-magic"></i> Wygeneruj przepis
                </button>
            </form>
        </div>
    }
</div>
