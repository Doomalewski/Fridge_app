@model Fridge_app.Models.ViewModels.RegisterViewModel

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-wrapper">
    <div class="auth-card">
        <h2 class="auth-title">Rejestracja</h2>

        <form asp-action="Register">
            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Wprowadź e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Wprowadź hasło" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Powtórz hasło" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-auth w-100 mt-3">Zarejestruj</button>
        </form>

        <div class="text-center mt-4">
            <p>
                Masz już konto?
                <a asp-controller="User" asp-action="Login" class="auth-link">Zaloguj się</a>
            </p>
        </div>
    </div>
</div>
