@model IEnumerable<Fridge_app.Models.User>
@{
    ViewData["Title"] = "Lista u¿ytkowników";
}
<link rel="stylesheet" href="~/css/users.css" />

<div class="home-wrapper">
    <div class="home-header">
        <div class="welcome-box">
            <div class="welcome-icon">
                <i class="bi bi-people"></i>
            </div>
            <div>
                <h1 class="welcome-title">@ViewData["Title"]</h1>
                <p class="welcome-subtitle">Zarz¹dzaj kontami i przepisami u¿ytkowników.</p>
            </div>
        </div>
        <div class="header-actions">
            <a asp-action="Register" class="btn btn-primary">Dodaj nowego u¿ytkownika</a>
            <a href="javascript:history.back()" class="back-link">
                <i class="bi bi-arrow-left"></i> Powrót
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="input-group mb-3">
        <span class="input-group-text">Szukaj</span>
        <input type="text" id="searchInput" class="form-control" placeholder="Wpisz email u¿ytkownika...">
    </div>

    <div class="table-responsive">
        <table class="table table-hover users-table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Rodzaj diety</th>
                    <th>Przepisy</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="user-row">
                        <td>
                            <strong>@user.Email</strong>
                        </td>
                        <td>
                            @if (user.HumanStats != null && !string.IsNullOrEmpty(user.HumanStats.Diet))
                            {
                                <span class="badge bg-warning text-dark">@user.HumanStats.Diet</span>
                            }
                            else
                            {
                                <span class="text-muted">Brak danych</span>
                            }
                        </td>
                        <td>
                            <a asp-action="ViewUserMeals" asp-route-userId="@user.Id" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-book"></i> Zobacz przepisy
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4" role="alert">
            Brak u¿ytkowników w systemie.
        </div>
    }
    else
    {
        <div class="mt-4 text-muted">
            Liczba u¿ytkowników: <strong>@Model.Count()</strong>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll(".user-row");

            searchInput.addEventListener("keyup", function () {
                const searchText = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    const email = row.querySelector("td:first-child").textContent.toLowerCase();
                    row.style.display = email.includes(searchText) ? "" : "none";
                });
            });
        });
    </script>
}
