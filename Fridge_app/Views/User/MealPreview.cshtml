@model Fridge_app.Models.ViewModels.MealCreateViewModel

@{
    ViewData["Title"] = "Podgląd posiłku";
}

<div class="container mt-4">
    <h2 class="mb-3">@Model.Description</h2>

    <form asp-action="SaveMeal" method="post">
        <!-- Ukryte pola podstawowe -->
        <input type="hidden" asp-for="Description" />
        <input type="hidden" asp-for="Calories" />
        <input type="hidden" asp-for="Category" />
        <input type="hidden" asp-for="Recipe.Name" />
        <input type="hidden" asp-for="Recipe.Difficulty" />
        <input type="hidden" asp-for="Recipe.CreatedAt" />

        <!-- ✅ Składniki -->
        @if (Model.Recipe?.Ingridients != null && Model.Recipe.Ingridients.Any())
        {
            for (var i = 0; i < Model.Recipe.Ingridients.Count; i++)
            {
                <input type="hidden" name="Recipe.Ingridients[@i].ProductId" value="@Model.Recipe.Ingridients[i].ProductId" />
                <input type="hidden" name="Recipe.Ingridients[@i].Amount" value="@Model.Recipe.Ingridients[i].Amount" />
            }
        }

        <!-- ✅ Narzędzia kuchenne -->
        @if (Model.Recipe?.CookingTools != null && Model.Recipe.CookingTools.Any())
        {
            for (var i = 0; i < Model.Recipe.CookingTools.Count; i++)
            {
                <input type="hidden" name="Recipe.CookingTools[@i].Name" value="@Model.Recipe.CookingTools[i].Name" />
            }
        }

        <!-- ✅ Kroki -->
        @if (Model.Recipe?.Steps != null && Model.Recipe.Steps.Any())
        {
            for (var i = 0; i < Model.Recipe.Steps.Count; i++)
            {
                <input type="hidden" name="Recipe.Steps[@i].StepNumber" value="@Model.Recipe.Steps[i].StepNumber" />
                <input type="hidden" name="Recipe.Steps[@i].Instruction" value="@Model.Recipe.Steps[i].Instruction" />
                <input type="hidden" name="Recipe.Steps[@i].StepTime" value="@Model.Recipe.Steps[i].StepTime" />
            }
        }

        <!-- Informacje o posiłku -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h4 class="mb-0">Informacje o posiłku</h4>
            </div>
            <div class="card-body">
                <p><strong>Kalorie:</strong> @Model.Calories kcal</p>
                <p><strong>Kategoria:</strong> @Model.Category</p>
                <p><strong>Poziom trudności:</strong> @Model.Recipe.Difficulty</p>
                <p><strong>Nazwa przepisu:</strong> @Model.Recipe.Name</p>
            </div>
        </div>

        <!-- Składniki -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h4 class="mb-0">Składniki</h4>
            </div>
            <div class="card-body">
                @if (Model.Recipe.Ingridients?.Any() == true)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var ing in Model.Recipe.Ingridients)
                        {
                            var productName = Model.AvailableProducts
                            .FirstOrDefault(p => p.Id == ing.ProductId)?.Name ?? "Nieznany produkt";
                            <li class="list-group-item">
                                <strong>@productName</strong> — @ing.Amount g
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Brak składników do wyświetlenia.</p>
                }
            </div>
        </div>

        <!-- Kroki przygotowania -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h4 class="mb-0">Kroki przygotowania</h4>
            </div>
            <div class="card-body">
                @if (Model.Recipe.Steps?.Any() == true)
                {
                    <ol class="list-group list-group-numbered">
                        @foreach (var step in Model.Recipe.Steps.OrderBy(s => s.StepNumber))
                        {
                            <li class="list-group-item">
                                <p class="mb-1">@step.Instruction</p>
                                <small class="text-muted">Czas: @step.StepTime min</small>
                            </li>
                        }
                    </ol>
                }
                else
                {
                    <p class="text-muted">Brak kroków przygotowania.</p>
                }
            </div>
        </div>

        <!-- Narzędzia -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h4 class="mb-0">Narzędzia kuchenne</h4>
            </div>
            <div class="card-body">
                @if (Model.Recipe.CookingTools?.Any() == true)
                {
                    <ul class="list-inline">
                        @foreach (var tool in Model.Recipe.CookingTools)
                        {
                            <li class="list-inline-item badge bg-secondary p-2 m-1">@tool.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Brak wymaganych narzędzi.</p>
                }
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-save"></i> Zapisz przepis
            </button>
        </div>
    </form>
</div>
